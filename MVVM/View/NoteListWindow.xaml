<Window x:Class="NoteApp.MVVM.View.NoteListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:NoteApp.MVVM.ViewModel"
        xmlns:model="clr-namespace:NoteApp.MVVM.Model"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:NoteListWindowViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CenterGridRowStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        
        <Style x:Key="LangBoxItems" TargetType="ComboBoxItem">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="LangBox" TargetType="ComboBox">
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="MenuBackground">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Header" 
                           Height="1*"/>
            <RowDefinition x:Name="DataGrid" 
                           Height="9*"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.Row="0" x:Name="TaskBar" 
                   Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
            <Button x:Name="AddNoteBtn" 
                    Content="{Binding AddNoteBtn}" 
                    Command="{Binding OpenAddNoteWinCommand}" 
                    HorizontalAlignment="Center" Padding="5" 
                    FontSize="16" 
                    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" 
                    Margin="5,5,5,5"
                    />
            <ComboBox x:Name="ChangeLangPopup" 
                      FontSize="16" 
                      ItemsSource="{Binding LangList}" 
                      SelectedValue="{Binding LangList[0]}" 
                      SelectedItem="{Binding SelectedLang}"
                      Margin="5,5,5,5" 
                      HorizontalAlignment="Right"
                      ItemContainerStyle="{StaticResource LangBoxItems}"
                      Style="{StaticResource LangBox}"
                      >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding IconPath}"
                               Width="25px"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </DockPanel>

        <DataGrid Grid.Row="1" x:Name="NoteListMenu" 
                  ItemsSource="{Binding NoteList}" 
                  BorderBrush="Transparent" 
                  HorizontalGridLinesBrush="#FFC3C2C2" 
                  VerticalGridLinesBrush="#FFC3C2C2"
                  AutoGenerateColumns="False"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.VerticalScrollBarVisibility="Visible">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
                                    ElementStyle="{StaticResource CenterGridRowStyle}"
                                    Width="1*" Foreground="Black">
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DataContext.IdHeader, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Description}" 
                                    Width="10*"
                                    >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0,5,0"/>
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                <DataGridTextColumn.HeaderTemplate>
                     <DataTemplate>
                            <TextBlock Text="{Binding DataContext.DescHeader, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                     </DataTemplate>
                </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Priority}" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
                                    ElementStyle="{StaticResource CenterGridRowStyle}" 
                                    Width="1.5*">
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DataContext.PriorityHeader, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding DueDate}" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
                                    ElementStyle="{StaticResource CenterGridRowStyle}" 
                                    Width="1.5*">
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DataContext.DueDateHeader, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTemplateColumn
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
                                    Width="1*">
                    <DataGridTemplateColumn.Header>
                        <TextBlock/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.RemoveNoteCommand, ElementName=NoteListMenu}" 
                                    CommandParameter="{Binding}" 
                                    Background="Transparent" 
                                    BorderBrush="Transparent" >
                                <Image Source="/MVVM/View/Icons/TrashCan.png"
                                       Width="20px"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
