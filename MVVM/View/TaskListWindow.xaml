<Window x:Class="ToDoApp.MVVM.View.TaskListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ToDoApp.MVVM.ViewModel"
        xmlns:model="clr-namespace:ToDoApp.MVVM.Model"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="ToDoApp" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:TaskListWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>

        </Style>
        <Style x:Key="CenterGridRowStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        
        <Style x:Key="LangBoxItems" TargetType="ComboBoxItem">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="LangBox" TargetType="ComboBox">
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="DataGridDefault" TargetType="DataGrid">
            <Setter Property="Background" Value="#FFDADADA"/>
            <Setter Property="RowBackground" Value="#FFEAECEC"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>


        <LinearGradientBrush x:Key="TitleBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF386CC1" Offset="0"/>
            <GradientStop Color="#FF669FFF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid x:Name="MenuBackground"
          MouseLeftButtonDown="DataGridDeselect">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Header" 
                           Height="0.5*"
                           MinHeight="50px"/>
            <RowDefinition x:Name="DataGrid" 
                           Height="9*"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.Row="0" x:Name="TaskBar" 
                   Background="{StaticResource TitleBackground}">
            <Button x:Name="AddTaskBtn" 
                    Content="{Binding AddTaskBtn}" 
                    Command="{Binding OpenAddTaskWinCommand}" 
                    HorizontalAlignment="Center"  
                    FontSize="16" 
                    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" 
                    Margin="10"
                    Padding="5,0,5,0"
                    />
            <ComboBox x:Name="ChangeLangPopup" 
                      FontSize="16" 
                      ItemsSource="{Binding LangList}" 
                      SelectedValue="{Binding LangList[0]}" 
                      SelectedItem="{Binding SelectedLang}"
                      Margin="10" 
                      HorizontalAlignment="Right"
                      ItemContainerStyle="{StaticResource LangBoxItems}"
                      Style="{StaticResource LangBox}"
                      >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding IconPath}"
                               Width="25px"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </DockPanel>

        <DataGrid Grid.Row="1" 
                  x:Name="TaskListMenu" 
                  ItemsSource="{Binding TaskList}" 
                  BorderBrush="Transparent" 
                  HorizontalGridLinesBrush="#FFC3C2C2" 
                  VerticalGridLinesBrush="#FFC3C2C2"
                  Style="{StaticResource DataGridDefault}"
                  AutoGenerateColumns="False"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  Sorting="DataGridHeaderSort"
                  CellEditEnding="DataGridCellEdit">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
                                    ElementStyle="{StaticResource CenterGridRowStyle}"
                                    Width="1.25*" Foreground="Black"
                                    IsReadOnly="True">
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DataContext.IdHeader, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Description}" 
                                    Width="10*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0,5,0"/>
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                <DataGridTextColumn.HeaderTemplate>
                     <DataTemplate>
                            <TextBlock Text="{Binding DataContext.DescHeader, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                     </DataTemplate>
                </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Priority}" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
                                    ElementStyle="{StaticResource CenterGridRowStyle}" 
                                    Width="1.5*"
                                    IsReadOnly="True">
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DataContext.PriorityHeader, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Date}" 
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
                                    ElementStyle="{StaticResource CenterGridRowStyle}" 
                                    Width="1.5*"
                                    IsReadOnly="True">
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DataContext.DueDateHeader, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTemplateColumn
                                    HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
                                    Width="1*"
                                    IsReadOnly="True">
                    <DataGridTemplateColumn.Header>
                        <TextBlock/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.RemoveTaskCommand, ElementName=TaskListMenu}" 
                                    CommandParameter="{Binding}" 
                                    Background="Transparent" 
                                    BorderBrush="Transparent" >
                                <Image Source="/MVVM/View/Icons/TrashCan.png"
                                       Width="20px"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
